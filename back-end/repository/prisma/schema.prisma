generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  role      Role
  families  Family[]  @relation("FamilyMembers")
  ownedFamilies Family[] @relation("FamilyOwner")
  shoppingLists ShoppingList[] @relation("ShoppingListUpdatedBy")
}

model Family {
  id          Int      @id @default(autoincrement())
  name        String
  familyList  User[]   @relation("FamilyMembers")
  ownerId     Int
  owner       User     @relation("FamilyOwner", fields: [ownerId], references: [id])
}

model Item {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  listId    Int
  list      ShoppingList @relation(fields: [listId], references: [id])
}

model ShoppingList {
  id          Int       @id @default(autoincrement())
  name        String
  creationDate DateTime
  lastUpdate  DateTime
  updatedById Int
  updatedBy   User      @relation("ShoppingListUpdatedBy", fields: [updatedById], references: [id])
  items       Item[]
}

enum Role {
  ADMIN
  PARENT
  CHILD
}